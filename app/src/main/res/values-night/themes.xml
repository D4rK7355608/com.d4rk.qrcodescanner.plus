<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/colorAccent</item>
        <item name="colorPrimaryContainer">@color/colorContainer</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryContainer">@color/colorContainer</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenuTheme</item>
    </style>
    <style name="AppThemeActionBar" parent="Theme.Material3.DayNight">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/colorAccent</item>
        <item name="colorPrimaryContainer">@color/colorContainer</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryContainer">@color/colorContainer</item>
        <item name="colorOnSurface">@color/colorSurface</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>
    <style name="SwitchStyle" parent="Theme.MaterialComponents.DayNight">
        <item name="enforceMaterialTheme">true</item>
        <item name="useMaterialThemeColors">true</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorSwitchThumbNormal">#B9B9B9</item>
        <item name="android:colorForeground">#787878</item>
    </style>
    <style name="AppBarLayoutStyle" parent="BaseAppBarLayoutStyle">
        <item name="liftOnScroll">false</item>
    </style>
