<resources>
    <style name="SplashScreenTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">?attr/colorSurface</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>
    <style name="AppTheme" parent="@style/AppThemeActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppThemeActionBar" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:colorBackground">?attr/colorSurface</item>
        <item name="actionBarStyle">@style/actionBarStyle</item>
        <item name="dialogCornerRadius">24dp</item>
        <item name="switchPreferenceCompatStyle">@style/switchPreferenceCompatStyle</item>
        <item name="actionOverflowMenuStyle">@style/actionOverflowMenuStyle</item>
        <item name="android:alertDialogTheme">@style/ThemeOverlay.Material3.MaterialAlertDialog.Centered</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.Material3.MaterialAlertDialog.Centered</item>
        <item name="alertDialogTheme">@style/ThemeOverlay.Material3.MaterialAlertDialog.Centered</item>
        <item name="panelMenuListTheme">@style/ThemeOverlay.Material3.MaterialAlertDialog.Centered</item>
        <item name="android:fontFamily">@font/font_poppins</item>
    </style>
    <style name="actionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@android:color/transparent</item>
    </style>
    <style name="actionOverflowMenuStyle" parent="@style/Widget.Material3.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/bg_overflow</item>
    </style>
    <style name="switchPreferenceCompatStyle" parent="@style/Preference.SwitchPreferenceCompat.Material">
        <item name="widgetLayout">@layout/preference_switch_widget_layout</item>
    </style>
    <style name="FontTheme" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/font_poppins</item>
        <item name="android:fontFamily">@font/font_poppins</item>
    </style>
    <style name="ScrollStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
    </style>
    <style name="ActionBarTheme" parent="Widget.Material3.ActionBar.Solid">
        <item name="background">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>
    <style name="ClickableBackground">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
    <style name="ToolbarWithBackButtonStyle" parent="ActionBarTheme">
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
    </style>
    <style name="DefaultTextViewStyle">
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>
    <style name="SecondaryTextViewStyle">
        <item name="android:textSize">@dimen/default_text_size_very_small</item>
    </style>
    <style name="GroupTitleTextViewStyle">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/default_text_size_small2</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CreateBarcodeFragmentAlternativeTextViewStyle">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>
    <style name="BaseAppBarLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="liftOnScroll">false</item>
        <item name="liftOnScrollTargetViewId">@id/scroll_view</item>
    </style>
    <style name="AppBarLayoutStyle" parent="BaseAppBarLayoutStyle">
        <item name="liftOnScroll">false</item>
        <item name="liftOnScrollTargetViewId">@id/scroll_view</item>
    </style>
</resources>