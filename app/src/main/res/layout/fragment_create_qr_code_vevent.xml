<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="@dimen/default_margin"
    android:orientation="vertical">
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_margin">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|top"
            android:lines="1"
            android:maxLines="1"
            android:hint="@string/title"
            android:imeOptions="actionNext"
            android:backgroundTint="@color/colorAccent"
            android:inputType="text"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="@dimen/default_margin">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_organizer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|top"
            android:lines="1"
            android:maxLines="1"
            android:hint="@string/fragment_create_qr_code_event_organizer_hint"
            android:imeOptions="actionNext"
            android:backgroundTint="@color/colorAccent"
            android:inputType="text"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="@dimen/default_margin">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|top"
            android:lines="1"
            android:maxLines="1"
            android:hint="@string/fragment_create_qr_code_event_summary_hint"
            android:imeOptions="actionDone"
            android:backgroundTint="@color/colorAccent"
            android:inputType="text"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.d4rk.qrcodescanner.plus.feature.common.view.DateTimePickerButton
        android:id="@+id/button_date_time_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="4dp"
        app:hint="@string/fragment_create_qr_code_event_start_date_hint"/>
    <com.d4rk.qrcodescanner.plus.feature.common.view.DateTimePickerButton
        android:id="@+id/button_date_time_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="4dp"
        app:hint="@string/fragment_create_qr_code_event_end_date_hint"/>
</LinearLayout>
